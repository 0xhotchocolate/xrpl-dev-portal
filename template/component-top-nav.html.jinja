        </a>
        <div class="dropdown-menu smaller-dropdown" aria-labelledby="language_selector_header_btn">
          <hr />
          {% for lang in config.languages if lang.code != target.lang %}
          <a class="dropdown-item" href="{{lang.prefix}}{{currentpage.html}}">
            {{lang.display_name}}
          </a>
          <hr />
          {% endfor %}
        </div><!--/.dropdown-menu-->
